<?xml version="1.0" encoding="utf-8"?>

<base:AnimationPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:base="clr-namespace:FormsControls.Base;assembly=FormsControls.Base"
             xmlns:localisation="clr-namespace:TheScoreBook.localisation;assembly=TheScoreBook"
             xmlns:androidSpecific="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             x:Class="TheScoreBook.views.shoot.RoundSelectionPage"
             BackgroundColor="Chartreuse">
    <base:AnimationPage.PageAnimation>
        <base:PageAnimation Duration="Short" Subtype="FromBottom"/>
    </base:AnimationPage.PageAnimation>
    <ContentPage.Content>
        <StackLayout
            Margin="0"
            Padding="0"
            VerticalOptions="Start">
            <Grid 
                x:Name="BottomBar"
                VerticalOptions="Start"
                Margin="0"
                Padding="0"
                BackgroundColor="DarkGray">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Text="{localisation:Translate Scores}" Clicked="OnScoresButtonOnClicked" BackgroundColor="Transparent"/>
                <ImageButton Grid.Column="1" Source="Icon" Clicked="OnStartButtonOnClicked" BackgroundColor="Transparent" Margin="0, 4"
                             androidSpecific:ImageButton.IsShadowEnabled = "true"
                             androidSpecific:ImageButton.ShadowColor = "Yellow"
                             androidSpecific:ImageButton.ShadowRadius = "100" />
                <Button Grid.Column="2" Text="{localisation:Translate Profile}" Clicked="OnProfileButtonOnClicked" BackgroundColor="Transparent"/>
            </Grid>
            <Label Text="{localisation:Translate Round}"/>
            <Picker
                ItemsSource="{Binding PossibleRounds}"
                SelectedItem="{Binding SelectedRound, Mode=TwoWay}"/>
            <Label Text="{localisation:Translate Style}"/>
            <Picker
                ItemsSource="{Binding PossibleStyles}"
                SelectedIndex="{Binding SelectedStyle, Mode=TwoWay}"/>
            <Label Text="{localisation:Translate Date}"/>
            <DatePicker
                Date="{Binding SelectedDate, Mode=TwoWay}"
                Format="dd/MM/yyyy"/>
        </StackLayout>
    </ContentPage.Content>
</base:AnimationPage>